<div class="row">
  <div class="span9">


    <!-- metadata -->
    <div class="row row-pad-bottom">
      <div class="span9">
        <div class='article-sport-guys'>
          <% @article.activities.each do |act| %>
            <%= mini_sport_guy(act.name) %>
          <% end %>
        </div>
        <h1><%= @article.title %></h1>
        <h3 class="header-gray"><%= @article.user.name %>, <%= @article.school.name %>, <%= @article.published_at.stamp("January 23, 2011") %></h3>
        <%= image_tag @article.cover_photo.large_cover %>
      </div>
    </div>

    <!-- content -->
    <div class="row">
      <div class="span9 article-body">
        <%= @article.body.html_safe %>
      </div>
    </div>
  </div>

  <!-- right sidebar -->
  <div class="span3">
    <div class="row">
      <div class="span3 span-gray">
        <h4 class="header-padded">Gear you may need</h4>
        <ul>
          <% activity_sponsors.each do |article| %>
            <li><%= link_to article.title, article %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="row show-grid">
      <div class="span3">More from author</div>
    </div>
  </div>
</div>
