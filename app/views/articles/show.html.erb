<div class="row">
  <div class="span9">

    <!-- metadata -->
    <div class="row row-pad-bottom">
      <div class="span9">
        <div class='article-sport-guys'>
          <% @article.activities.each do |act| %>
            <%= mini_sport_guy(act.name) %>
          <% end %>
        </div>
        <h1><%= @article.title %></h1>
        <h3 class="header-gray"><%= @article.user.name %>, <%= @article.school.name %>, <%= @article.published_at.stamp("January 23, 2011") %></h3>
        <%= image_tag @article.cover_photo.large_cover %>
      </div>
    </div>

    <!-- content -->
    <div class="row">
      <div class="span9 article-body">
        <%= @article.body.html_safe %>
      </div>
    </div>
  </div>

  <!-- right sidebar -->
  <div class="span3">
    <% if activity_sponsors.present? %>
      <div class="span3 span-gray">
        <h4 class="header-padded">Gear you may need</h4>
        <% activity_sponsors.each do |sponsor_article| %>
          <div class="span3 recent-article-thumb recent-article-thumb-no-container">
            <%= render 'articles/article', article: sponsor_article %>
            <%= render 'articles/overlay_caption', article: sponsor_article %>
          </div>
        <% end %>
      </div>
    <% end %>

    <div class="span3 span-gray">
      <div class="pad-box">
        <h4 class="header-padded">More from <%= @article.user.name %></h4>
        <ul>
          <% recent_articles_by_user.each do |article| %>
            <li><%= link_to article.title, article %></li>
          <% end %>
        </ul>

        <h4 class="header-padded">More from <%= @article.school.name %></h4>
        <ul>
          <% recent_articles_by_school.each do |article| %>
            <li><%= link_to article.title, article %></li>
          <% end %>
        </ul>

        <h4 class="header-padded">More from <%= @article.activities.pluck(:name).to_sentence %></h4>
        <ul>
          <% recent_articles_by_activity.each do |article| %>
            <li><%= link_to article.title, article %></li>
          <% end %>
        </ul>

      </div>
    </div>
  </div>
</div>
