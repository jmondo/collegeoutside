<%= simple_form_for [:write, @article] do |f| -%>
  <%= f.input :title,
    input_html: { class: "input-full-width" } %>
  <%= f.input :body,
    input_html: { class: "input-full-width redactor" } %>
  <%= f.association :region %>
  <%= image_tag 'map.png', alt: 'map of regions' %>
  <%= f.association :state %>
  <%= f.association :school %>
  <%= f.association :seasons,
    as: :check_boxes %>
  <%= f.association :activities,
    as: :check_boxes,
    wrapper_html: { class: "inputs-col-3" } %>
  <%= f.input :cover_photo %>
  <%= f.input :cover_photo_caption %>
  <%= f.submit 'Save' %>
<% end -%>
